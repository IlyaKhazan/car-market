{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      //  "*": ["node_modules/*"],
      "@types": ["src/types"],
      "@components/*": ["./src/components/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "index.d.ts"]
}
